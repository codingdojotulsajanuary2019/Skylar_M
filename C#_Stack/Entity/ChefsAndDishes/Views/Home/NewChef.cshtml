@model Chef

<div class="container-fluid">
    <div class="header container-fluid text-center mb-5">
        <a style="font-size: 2em;" href="/" class="d-inline-block">Chefs</a><h2 class="d-inline-block"> | </h2><a style="font-size: 2em;" href="dishes" class="d-inline-block">Dishes</a>
    </div>
    <div class="subheader container-fluid mb-3">
        <h3 class="border-bottom d-inline-block col-8 pb-3">Fill out the form below to add a new Chef to the roster.</h3>
        <a href="new_dish" class="d-inline-block col-2 offset-1">Add a Dish</a>
    </div>
    <div class="col-9">
        <form action="create_chef" method="post">
                <span class="text-danger" asp-validation-for="FirstName"></span>
            <input class="form-control mb-3 col-5" asp-for="FirstName" placeholder="First Name">
                <span class="text-danger" asp-validation-for="LastName"></span>
            <input class="form-control mb-3 col-5" asp-for="LastName" placeholder="Last Name">
                <span class="text-danger" asp-validation-for="DOB"></span>
            <input class="form-control mb-3 col-3" asp-for="DOB">
            <input class="btn btn-outline-success mb-3" type="submit" value="Submit">
        </form>
    </div>
</div>